.container {
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.status {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.content {
  margin-top: 40rpx;
}

.device-list {
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.list-header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.device-item {
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.device-item:active {
  background: #f5f5f5;
}

.rssi {
  color: #999;
  font-size: 24rpx;
}

.empty {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
}

.operation {
  padding: 40rpx 0;
}

.operation button {
  margin: 20rpx 0;
}